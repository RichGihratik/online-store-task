{
    "exclude": ["node_modules"],
    "include": ["src/**/*", "src/**/*.vue"],
    "compilerOptions": {
        "baseUrl": ".",
        "lib": ["ES2016", "DOM", "DOM.Iterable"],
        "paths": {
            "@/*": ["src/*"]
        },
        "module": "ESNext",
        "preserveValueImports": true,
        "importsNotUsedAsValues": "error",
        "moduleResolution": "node",
        "target": "ESNext",
        "rootDir": "src/",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "removeComments": true,
        "noEmitOnError": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "alwaysStrict": true,
        "skipLibCheck": true
    }
}
